{
  "name": "react-smart-table",
  "description": "React component to  render a large dataset into a table",
  "author": "loispostula",
  "version": "0.0.1",
  "homepage": "https://github.com/loispostula/react-smart-table",
  "main": "dist/commonjs/index.js",
  "modules": "dist/es/index.js",
  "jsnext:main": "dist/es/index.js",
  "scripts": {
    "build": "npm run build:commonjs && npm run build:css && npm run build:es && npm run build:demo",
    "build:commonjs": "npm run clean:commonjs && cross-env NODE_ENV=production cross-env BABEL_ENV=commonjs babel source --out-dir dist/commonjs --ignore *.example.js,*.test.js,source/demo/,source/test.js",
    "build:css": "postcss --use autoprefixer source/styles.css > styles.css",
    "build:demo": "npm run clean:demo && cross-env NODE_ENV=production webpack --config webpack.config.demo.js -p --bail",
    "build:es": "npm run clean:es && cross-env NODE_ENV=production cross-env BABEL_ENV=es babel source --out-dir dist/es --ignore *.example.js,*.test.js,source/demo/,source/tests.js",
    "clean": "npm run clean:commonjs && npm run clean:demo && npm run clean:es",
    "clean:commonjs": "rimraf dist/commonjs",
    "clean:demo": "rimraf build",
    "clean:es": "rimraf dist/es",
    "deploy": "gh-pages -d build",
    "lint": "standard",
    "prebuild:css": "node-sass --include-path source/scss source/scss/styles.scss source/styles.css",
    "prebuild": "npm run lint",
    "predeploy": "cp ./circle.yml ./build/",
    "prepublish": "npm run build",
    "postpublish": "npm run deploy",
    "posttest": "[ -z \"$CI\" ] || codecov",
    "start": "cross-env NODE_ENV=development webpack-dev-server --hot --inline --config webpack.config.dev.js",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "cross-env NODE_ENV=test karma start",
    "watch": "watch 'clear && npm run test -s' source",
    "watch:nolint": "watch 'clear && npm run test:unit' source"
  },
  "files": [
    "dist",
    "styles.css"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/loispostula/react-smart-table.git"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "dist",
      "source/vendor"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^6.6.1",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-__coverage__": "^11.0.0",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-react-inline-elements": "^6.8.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.11",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-plugin-typecheck": "^3.9.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.16.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "gh-pages": "^0.12.0",
    "html-webpack-plugin": "^2.25.0",
    "immutable": "^3.8.1",
    "jasmine": "^2.5.2",
    "jasmine-core": "^2.5.2",
    "karma": "^1.3.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.1",
    "node-sass": "^4.1.1",
    "postcss": "^5.2.8",
    "postcss-cli": "^2.6.0",
    "postcss-loader": "^1.2.1",
    "react": "^15.4.1",
    "react-addons-test-utils": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.4",
    "redbox-react": "^1.3.3",
    "rimraf": "^2.5.4",
    "standard": "^8.6.0",
    "style-loader": "^0.13.1",
    "watch": "^1.0.1",
    "webpack": "^1.14.0",
    "webpack-dashboard": "^0.2.0",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "babel-runtime": "^6.18.0"
  },
  "peerDependencies": {
    "react": "^15.0.0",
    "react-dom": "^15.0.0"
  }
}
